<% layout("/layouts/boilerplate")-%>
<!-- The layout tag is used to fix a specific template that can be imported to all pages at once i.e. boilerplate.ejs .......imported using     ejs-mate     -->
  <body>
    <h3>All Listings</h3>

    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->

  <!-- ! Card Styling                  , adding a for loop to create multiple cards-->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
  <% for(let listing of allListings) { %> <!-- Loop through all listings -->

<a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark"> <!-- Link to listing details page -->

    <div class="card col "width="18rem" >
      <img src="<%= listing.image %> "
           class="card-img-top"
           alt="listing_image"
           style="height : 20rem"/>
<!-- ? a weird error , wrote 20 rem gave  error , but 20rem is correct -->
      <div class="card-img-overlay">.</div>


      <div class="card-body">
        <p class="card-text">
         <b><%= listing.title %></b>
            <br>
            &#8377 <%= listing.price.toLocaleString("en-IN") %> / night
              <!-- Rupee sign  &#8377 -->

        </p>
      </div>
    </div>
</a>

    <% } %>
</div>

  </body>

